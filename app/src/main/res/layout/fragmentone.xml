<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

<android.support.v4.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_marginTop="@dimen/dp_36"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/popup"
                android:layout_width="24dp"
                android:layout_height="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/sousuo"
                android:padding="15dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/ed_text"
                android:textColor="#cccccc"
                android:hint="请输入你要搜索的内容"
                android:layout_toRightOf="@+id/popup"
                android:padding="10dp"
                android:background="@drawable/yuanjiao"
                />
            <TextView
                android:id="@+id/sou"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_alignParentRight="true"
                android:text="搜索"
                android:textSize="15dp" />
        </RelativeLayout>

        <com.stx.xhb.xbanner.XBanner
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/myxbanner"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_alignParentTop="true"
            app:AutoPlayTime="3000"
            app:clipChildrenLeftRightMargin="24dp"
            app:isClipChildrenMode="true"
            app:isShowIndicatorOnlyOne="true"
            app:isShowNumberIndicator="true"
            app:pageChangeDuration="800"
            app:pointsPosition="RIGHT"
            app:tipTextSize="12sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="热销新品"
            android:textSize="16dp"
            android:gravity="center"
            android:textColor="#ffcc66"
            android:background="@drawable/rexiao"
            />

        <TextView
            android:id="@+id/dian"
            android:layout_width="wrap_content"
            android:layout_height="6dp"
            android:layout_marginTop="-20dp"
            android:layout_marginLeft="320dp"
            android:background="@drawable/dian" />
        <GridView
            android:id="@+id/gv"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:numColumns="3"
            android:layout_marginTop="20dp"
            ></GridView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="魔力时尚"
            android:textSize="16dp"
            android:gravity="center"
            android:textColor="#ffccff"
            android:background="@drawable/moli"
            />
        <TextView
            android:id="@+id/dian1"
            android:layout_width="wrap_content"
            android:layout_height="6dp"
            android:layout_marginTop="-20dp"
            android:layout_marginLeft="320dp"
            android:background="@drawable/dian" />
        <ListView
            android:id="@+id/lv"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginTop="20dp"
            ></ListView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="品质生活"
            android:textSize="16dp"
            android:gravity="center"
            android:textColor="#ccffcc"
            android:background="@drawable/pingzhi"
            />
        <TextView
            android:id="@+id/dian2"
            android:layout_width="wrap_content"
            android:layout_height="6dp"
            android:layout_marginTop="-20dp"
            android:layout_marginLeft="320dp"
            android:background="@drawable/dian" />
        <GridView
            android:id="@+id/gv1"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:numColumns="2"
            ></GridView>
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>

</LinearLayout>
