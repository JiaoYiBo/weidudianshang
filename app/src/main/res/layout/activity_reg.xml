<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".avtivity.RegActivity"
    android:background="@drawable/login"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_marginRight="@dimen/dp_36"
        android:layout_marginLeft="@dimen/dp_36"
        android:layout_marginTop="@dimen/dp_180"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:id="@+id/mobile"
                android:hint="手机号"
                android:textColorHint="#ffffff"
                android:textSize="@dimen/sp_16"
                android:drawableLeft="@drawable/phone"
                android:layout_width="@dimen/dp_280"
                android:layout_height="@dimen/dp_40"
                android:drawablePadding="@dimen/dp_20"
                android:background="@android:color/transparent"/>

        </LinearLayout>

        <View
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="@dimen/dp_280"
            android:layout_height="1dp"
            android:background="#ffffff"
            />

        <LinearLayout
            android:layout_marginTop="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edit_yanzhen"
                android:hint="验证码"
                android:textColorHint="#ffff"
                android:textSize="@dimen/sp_18"
                android:layout_weight="1"
                android:drawableLeft="@drawable/yan"
                android:layout_width="@dimen/dp_280"
                android:drawablePadding="@dimen/dp_20"
                android:layout_height="@dimen/dp_40"
                android:background="@android:color/transparent"/>

            <TextView
                android:id="@+id/yan"
                android:text="获取验证码"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#fff"
                android:textSize="@dimen/sp_10"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_24"
                />

        </LinearLayout>

        <View
            android:layout_marginTop="@dimen/dp_20"
            android:layout_width="@dimen/dp_280"
            android:layout_height="1dp"
            android:background="#ffffff"
            />
        <LinearLayout
            android:layout_marginTop="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/password"
                android:hint="登录密码"
                android:inputType="numberPassword"
                android:textColorHint="#ffff"
                android:textSize="@dimen/sp_18"
                android:layout_weight="1"
                android:drawableLeft="@drawable/suo"
                android:layout_width="@dimen/dp_280"
                android:drawablePadding="@dimen/dp_20"
                android:layout_height="@dimen/dp_40"
                android:background="@android:color/transparent"
                android:password="true"/>

            <ImageView
                android:id="@+id/eye"
                android:src="@drawable/eye"
                android:layout_gravity="center"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                />

        </LinearLayout>

        <View
            android:layout_marginTop="@dimen/sp_10"
            android:layout_width="@dimen/dp_280"
            android:layout_height="1dp"
            android:background="#ffffff"
            />

        <LinearLayout
            android:layout_marginTop="@dimen/sp_10"
            android:layout_width="@dimen/dp_280"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/reg"
                android:text="已有账号？ 立即登录"
                android:textColor="#fff"
                android:textSize="@dimen/sp_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="Regs"
                />

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/Regg"
        android:layout_width="@dimen/dp_280"
        android:layout_height="@dimen/dp_40"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dp_36"
        android:layout_marginTop="@dimen/dp_80"
        android:layout_marginRight="@dimen/dp_36"
        android:gravity="center"
        android:onClick="Regg"
        android:text="注册"
        android:textColor="#ff5f71"
        android:textSize="@dimen/sp_18"
        android:background="@drawable/yuanjiao"
        />


</LinearLayout>