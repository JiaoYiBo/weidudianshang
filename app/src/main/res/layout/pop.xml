<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:background="#CCCCCC"
    android:layout_height="match_parent">
   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       >
       <TextView
           android:id="@+id/text"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="外套"/>

       <ImageButton
           android:id="@+id/image"
           android:layout_width="25dp"
           android:layout_height="25dp"
           android:background="@drawable/shangyi"/>
   </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_55"
        >
        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="卫衣"/>

        <ImageButton
            android:id="@+id/image1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/weiyi"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_55"
        >
        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="裤子"/>

        <ImageButton
            android:id="@+id/image2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/kuzi"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_55"
        >
        <TextView
            android:id="@+id/text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="裙子"/>

        <ImageButton
            android:id="@+id/image3"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/qunzi"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_55"
        >
        <TextView
            android:id="@+id/text5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="毛衣"/>

        <ImageButton
            android:id="@+id/image4"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/maoyi"/>
    </LinearLayout>
</LinearLayout>
