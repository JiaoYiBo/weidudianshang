<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".avtivity.PinjiaActivity"
    android:padding="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="5dp"
    android:orientation="vertical"
    >

    <!-- 订单列表格 , 头部  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/text_frag04_orderfrag02_addNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="#666666"
            android:textSize="12sp"
            android:text="2018-12-13 20:08"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/text_frag04_orderfrag02_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="0dp"
            android:text="发表"
            android:textColor="#666666"
            android:textSize="14sp" />
        <ImageView
            android:id="@+id/text_frag04_orderfrag02_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            />

    </LinearLayout>

    <!-- 订单列表格 ,  第一格  -->
    <RelativeLayout
        android:id="@+id/relativeLayout01_orderfrag02"
        android:layout_marginTop="10dp"
        android:background="@drawable/yuanjiao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            android:adjustViewBounds="true"
            android:minHeight="50dp"
            android:src="@drawable/xiaoxiaoxiao" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/img"
            android:padding="5dp"
            android:singleLine="true"
            android:text="秋季新款韩版女装卫衣冬款春秋..."
            android:textColor="#666666"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_marginTop="40dp"
            android:layout_toRightOf="@+id/img"
            android:padding="5dp"
            android:textSize="14sp"
            android:text="￥:139"
            android:textColor="#ff0606" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
    </RelativeLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:hint="请输入要评价的话"
        />
    <LinearLayout
        android:layout_marginLeft="@dimen/dp_20"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img1"
            android:src="@drawable/aaa"
            android:layout_width="100dp"
            android:layout_height="100dp" />
        <ImageView
            android:id="@+id/img2"
            android:src="@drawable/aaa"
            android:layout_width="100dp"
            android:layout_height="100dp" />
        <ImageView
            android:id="@+id/img3"
            android:src="@drawable/aaa"
            android:layout_width="100dp"
            android:layout_height="100dp" />
    </LinearLayout>
</LinearLayout>