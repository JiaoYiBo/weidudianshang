<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="5dp"
    android:orientation="vertical"
    >


    <!-- 订单列表格 , 头部  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#666666"
            android:textSize="12sp"
            android:text="订单号:" />
        <TextView
            android:id="@+id/text_frag04_orderfrag02_addNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="#666666"
            android:textSize="12sp"
            android:layout_weight="1"
            android:text="TextView" />
        <TextView
            android:id="@+id/text_frag04_orderfrag02_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="0dp"
            android:text="2018-12-13 20:08"
            android:textColor="#666666"
            android:textSize="14sp" />
        <ImageView
            android:id="@+id/text_frag04_orderfrag02_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            />

    </LinearLayout>

    <!-- 订单列表格 ,  第一格  -->
    <RelativeLayout
        android:id="@+id/relativeLayout01_orderfrag021"
        android:layout_marginTop="10dp"
        android:background="@drawable/yuanjiao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="11dp"
            android:layout_marginLeft="11dp"
            android:adjustViewBounds="true"
            android:minHeight="50dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/img"
            android:padding="5dp"
            android:singleLine="true"
            android:text="标题"
            android:textColor="#666666"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_marginTop="40dp"
            android:layout_toRightOf="@+id/img"
            android:padding="5dp"
            android:textSize="14sp"
            android:text="￥价格"
            android:textColor="#ff0606" />

    </RelativeLayout>

    <!-- 订单列表格 ,  第二格  -->
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:background="@drawable/yuanjiao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/img1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            android:adjustViewBounds="true"
            android:minHeight="50dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/title1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/img1"
            android:padding="5dp"
            android:singleLine="true"
            android:text="标题"
            android:textColor="#666666"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/price1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title1"
            android:layout_marginTop="40dp"
            android:layout_toRightOf="@+id/img1"
            android:padding="5dp"
            android:textSize="14sp"
            android:text="￥价格"
            android:textColor="#ff0606" />
    </RelativeLayout>
    <!-- 订单列表格 ,  第一格  -->
    <RelativeLayout
        android:id="@+id/relativeLayout01_orderfrag02"
        android:layout_marginTop="10dp"
        android:background="@drawable/yuanjiao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/img2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            android:adjustViewBounds="true"
            android:minHeight="50dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/title2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/img2"
            android:padding="5dp"
            android:singleLine="true"
            android:text="标题"
            android:textColor="#666666"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/price2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title2"
            android:layout_marginTop="40dp"
            android:layout_toRightOf="@+id/img2"
            android:padding="5dp"
            android:textSize="14sp"
            android:text="￥价格"
            android:textColor="#ff0606" />
    </RelativeLayout>
    <TextView
        android:id="@+id/text"
        android:textColor="#FF00"
        android:text="共计3件商品,一共666元"
        android:layout_marginLeft="150dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btn1"
        android:text="取消订单"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btn2"
        android:text="去支付"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="-48dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
    </RelativeLayout>

</LinearLayout>
