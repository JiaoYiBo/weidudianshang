<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_310"
        android:orientation="vertical"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_25"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginRight="@dimen/dp_25"
        android:clickable="true"
        app:cardElevation="20px"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="@color/cardview_light_background">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/img"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_50"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="16dp"
                    app:roundAsCircle="true"
                    app:roundedCornerRadius="8dp"
                    app:roundBottomLeft="true"
                    app:roundBottomRight="true"
                    app:roundTopLeft="true"
                    app:roundTopRight="true"
                    android:src="@mipmap/ic_launcher"/>

                <TextView
                    android:id="@+id/name"
                    android:maxLength="5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="小白妞"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <Button
                        android:id="@+id/btn"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="150dp"
                        android:layout_marginTop="7dp"
                        android:background="@drawable/laji" />
                    <TextView
                        android:id="@+id/title2_id"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="2018-11-11 13:00"
                        android:layout_marginRight="@dimen/dp_10"
                        android:gravity="center_vertical"
                        android:layout_alignParentRight="true"
                        android:textColor="#f44"/>

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12344567890"
                    android:layout_marginTop="@dimen/dp_10"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/dp_310"
                android:layout_height="@dimen/dp_140"

                android:layout_marginRight="@dimen/dp_25"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/img1"
                    android:layout_width="@dimen/dp_140"
                    android:layout_height="@dimen/dp_140"
                    android:src="@mipmap/ic_launcher"
                    android:layout_marginLeft="@dimen/dp_10"/>

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/img2"
                    android:layout_width="@dimen/dp_140"
                    android:layout_height="@dimen/dp_140"
                    android:src="@mipmap/ic_launcher"
                    android:layout_marginLeft="@dimen/dp_10"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <CheckBox
                    android:button="@null"
                    android:id="@+id/cks"
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:layout_marginRight="@dimen/dp_50"
                    android:background="@drawable/zans"
                    android:layout_alignParentRight="true"/>
                <TextView
                    android:id="@+id/count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="42"
                    android:layout_marginRight="@dimen/dp_24"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
